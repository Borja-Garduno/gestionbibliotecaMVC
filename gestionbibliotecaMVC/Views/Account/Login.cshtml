@model gestionbibliotecaMVC.Models.LogOnModel

@{
    ViewBag.Title = "Login";
}

<div class="container">

@using (Html.BeginForm("Verificar", "Account", null, FormMethod.Post, new { @class = "form-signin" }))
{
        <div>
            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @placeholder = "Usuario o Email" } })
            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "" })
        </div>

        <div>
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Contraseña" , @type="password"} })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "" })

            @Html.ActionLink("Recuperar contraseña", "ResetPasswd", "Account", new { htmlAttributes = new { @class = "forgot-password" } })
        </div>

        <div id="rememberme" class="checkbox">
            <label>
                <input type="checkbox" value="rememberme"> Recuerdame
            </label>
        </div>
        @Html.ValidationMessageFor(model => model.Rememberme, "", new { @class = "" })

        <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Login</button>
}
    
</div>